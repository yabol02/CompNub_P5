groups:
  - name: temp_media
    rules:
    - record: temperatura_media
      expr: avg(temperatura)
      labels:
        job: delicias
        unidades: 'ÂºC'

  - name: hum_media
    rules:
    - record: humedad_media
      expr: avg(humedad)
      labels:
        job: delicias
        unidades: '%'

  - name: temp_alta
    rules:
    - alert: temperatura_alta
      expr: temperatura_media > 30
      for: 1m
      labels:
        job: delicias
        alerta: temperatura
      annotations:
        summary: Temperatura alta demasiado tiempo

  - name: temp_baja
    rules:
    - alert: temperatura_baja
      expr: temperatura_media < 0
      for: 1m
      labels:
        job: delicias
        alerta: temperatura
      annotations:
        summary: Temperatura baja demasiado tiempo

  - name: hum_baja
    rules:
    - alert: humedad_baja
      expr: humedad_media < 30
      for: 30s
      labels:
        job: delicias
        alerta: humedad
      annotations:
        summary: Humedad baja demasiado tiempo