groups:
  - name: temp_media
    rules:
    - record: temperatura_media
      expr: avg(temperatura)
      labels:
        job: delicias
        unidades: 'ÂºC'

  - name: hum_media
    rules:
    - record: humedad_mediay
      expr: avg(humedad)
      labels:
        job: delicias
        unidades: '%'

    - name: temp_alta
      rules:
      - record: temperatura_alta
        expr: temp_media > 30
        for: 1m
        labels:
          job: delicias
          alerta: temperatura
        annotations:
          summary: Temperatura alta demasiado tiempo

    - name: temp_baja
      rules:
      - record: temperatura_abaja
        expr: temp_media < 0
        for: 1m
        labels:
          job: delicias
          alerta: temperatura
        annotations:
          summary: Temperatura baja demasiado tiempo

    - name: hum_baja
      rules:
      - record: humedad_abaja
        expr: humedad_media < 30
        for: 30s
        labels:
          job: delicias
          alerta: humedad
        annotations:
          summary: Humedad baja demasiado tiempo